<scene>

  <image>
    300 300
  </image>

  <sampler type="JitteredSampler">
    <numSamplesU>150</numSamplesU>
    <numSamplesV>150</numSamplesV>
  </sampler>

  <!-- <renderer type="AmbientOcclusion"> -->
  <!--   <length>0.2</length> -->
  <!-- </renderer> -->

  <!-- <renderer type="DirectIlluminationRenderer"> -->
  <!-- </renderer> -->

  <renderer type="BruteForceRRPathTracer">
    <survivalProbability>0.75</survivalProbability>
    <backgroundIllumination>1</backgroundIllumination>
  </renderer>

  <camera>
    <eye>0 -2 2</eye>
    <target>0 0.5 0</target>
    <up>0 0 1</up>
    <yFOV>40</yFOV>
  </camera>
  
  <!-- Ceiling light --> 
  <material name="light" type="LambertianEmitter">
    <brdf type="Lambertian">
      <reflectance>0.78 0.78 0.78</reflectance>
    </brdf>
    <radiance>60 60 60</radiance>
  </material>

  <surface type="Mesh">
    <material ref="light" />
    <data>light.msh</data>
  </surface>

  <material name="white" type="Homogeneous">
    <brdf type="Lambertian">
      <reflectance>0.75 0.75 0.75</reflectance>
    </brdf>
  </material>

  <material name="black" type="Homogeneous">
    <brdf type="Lambertian">
      <reflectance>0 0 0</reflectance>
    </brdf>
  </material>

  <material name="offblack" type="Homogeneous">
    <brdf type="Lambertian">
      <reflectance>0.05 0.05 0.05</reflectance>
    </brdf>
  </material>

  <!-- Chessboard tiles -->
  <surface type="Mesh">
    <material ref="white" />
    <data>tile1.msh</data>
  </surface>

  <surface type="Mesh">
    <material ref="black" />
    <data>tile2.msh</data>
  </surface>

  <!-- Chess pieces -->
  <surface type="Mesh">
    <material ref="offblack" />
    <data>chess1.msh</data>
  </surface>

  <surface type="Mesh">
    <material ref="white" />
    <data>chess2.msh</data>
  </surface>

  <!-- Empty Cornell Box -->
  <surface type="Mesh">
    <material ref="white" />
    <data>empty2.msh</data>
  </surface>

  <surface type="Mesh">
    <material ref="offblack" />
    <data>left.msh</data>
  </surface>

  <surface type="Mesh">
    <material ref="offblack" />
    <data>right.msh</data>
  </surface>

  <background type="Uniform">
    <radiance>0.25 0.25 0.25</radiance>
  </background>

</scene>
